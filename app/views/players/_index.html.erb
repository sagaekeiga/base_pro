<table class="ui celled table">
  <thead>
    <tr>
    <th>ID</th>
    <th>名前</th>
    <th>ふりがな</th>
    <th>画像</th>
    <th>国</th>
    <th>出身</th>
    <th>誕生日</th>
    <th>身長</th>
    <th>体重</th>
    <th>投打</th>
    <th>ポジション</th>
    <th>ドラフト</th>
    <th>年棒</th>
    <th>経歴</th>
    <th>球団</th>
    <th>管理</th>
    </tr>
 </thead>
  <tbody>
    <% @players.each do |player| %>
        <tr>
         <td ><%= player.id %></td>
         <td><%= link_to"#{player.name}", player, { :target => "_blank"}  %></td>
         <td ><%= player.phonetic %></td>
         <td ><%= player.image %></td>
         <td ><%= player.country %></td>
         <td ><%= player.graduate %></td>
         <td ><%= player.birth %></td>
         <td ><%= player.height %></td>
         <td ><%= player.weight %></td>
         <td ><%= player.style %></td>
         <td ><%= player.position %></td>
         <td ><%= player.draft %></td>
         <td ><%= player.bar %></td>
         <td ><%= player.career %></td>
         <td ><%= player.team %></td>
         <td>
          <%= link_to "編集", edit_player_path(player.id), { :class => "ui olive button" } %>
          <%= link_to "削除", player, { :class => "ui red button", method: :delete, data: { confirm: "本当に削除してもいいですか？" }} %>
         </td>
        </tr>
    <% end %>
  </tbody>
</table>