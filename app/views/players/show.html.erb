

<div class="ui two column centered grid">
  <div class="column">
        <table class="ui celled striped table">
          <thead>
            <tr><th colspan="3">
              <%= @player.name %>
            </th>
          </tr></thead>
          <tbody>
            <tr>
              <td>ID</td>
              <td><%= @player.id %></td>
            </tr>
            <tr>
              <td>名前</td>
              <td><%= @player.name %></td>
            </tr>
            <tr>
              <td>ふりがな</td>
              <td><%= @player.phonetic %></td>
            </tr>
            <tr>
              <td class="collapsing">イメージ</td>
              <td><%= image_tag(@player.image, :class => "ui fluid image") if !@player.image.nil? %></td>
            </tr>
            <tr>
              <td>国籍</td>
              <td><%= @player.country %></td>
            </tr>
            <tr>
              <td>出身</td>
              <td><%= @player.graduate %></td>
            </tr>
            <tr>
              <td class="collapsing">誕生日</td>
              <td><%= @player.birth %></td>
            </tr>
            <tr>
              <td>フィジカル</td>
        	  <td><%= @player.physical %></td>
            </tr>
            <tr>
              <td>投打</td>
              <td><%= @player.style %></td>
            </tr>
            <tr>
              <td>ドラフト</td>
              <td><%= @player.draft %></td>
            </tr>
            <tr>
              <td>年棒</td>
              <td><%= @player.bar %></td>
            </tr>
            <tr>
              <td>経歴概要</td>
              <td><%= @player.career_over %></td>
            </tr>
            <tr>
              <td>経歴詳細</td>
              <td><%= @player.career_detail if !@player.career_detail.nil?%></td>
            </tr>
            <tr>
              <td>球団</td>
              <td><%= @player.team %></td>
            </tr>
            </tbody>
        </table>
  </div>
</div>